                  input(type='checkbox', value='true')
                  |                       Denúncia Anônima
          // Modal Footer
          .modal-footer
            button#cancelarBtn.btn.btn-default(type='button', data-dismiss='modal')
              | Cancelar
            button#denunciaBtn.btn.btn-primary(type='button')
              | Denunciar
